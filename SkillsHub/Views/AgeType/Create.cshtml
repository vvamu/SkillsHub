@using SkillsHub.Domain.BaseModels;
@using SkillsHub.Domain.Models;
@model AgeType;


@{

    var item = Model ?? new AgeType() ;

    var resText = "Создать";

    if (Model != null && Model.Id != Guid.Empty) resText = "Редактировать";
    var resTextWithName = resText + " возрастную категорию " + Model?.Name;

    bool isEdit = false;
    if (item.Id != Guid.Empty) isEdit = true;
}

<section class=" text-center " style="padding:0.7%">
   <div class="login-form-bg h-100">
   <div class="container h-100">
      <div class="row justify-content-center h-100" >
         <div class="col-xl-10">
            <div class="form-input-content">
               <div class="card login-form mb-0">
                  <div class="card-body pt-5">
                  <form>

                  @if(isEdit)
                                    {
                                        <input type="hidden" asp-for="@item.Id" value="@Model.Id" />
                     <div class="text-center" style="min-height:80px; display:flex;justify-content:space-between"> 
                        <h3>@resTextWithName</h3>
                        <div class="table-cell">@item.DateCreated</div>
                        <a asp-action="InstitutionSetting" asp-controller="CRM" >Назад</a>
                        @if(Model.IsDeleted)
                        {
                           <input type="submit" class="btn btn-info" asp-action="Remove" asp-controller="AgeType" asp-route-itemId="@item.Id" value="◯" style="height:50%"  />
                        }
                        <input type="submit" class="btn btn-danger" asp-action="Remove" asp-controller="AgeType" asp-route-itemId="@item.Id" value="Х" style="height:50%" OnClientClick="return confirm('Do you want Delete?');"/>
                     </div>
                                    }
                  else
                  {
                      <div class="text-center" style="min-height:80px; display:flex;justify-content:space-between"> 
                      <h3>
                        @resTextWithName
                        </h3>
                        <a asp-action="InstitutionSetting" asp-controller="CRM" >Назад</a>
                     </div>
                  }
                                    <div class="validation text-center" asp-validation-summary="ModelOnly" style="color:red;font-weight:400;"></div>

                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-skill">
                                            Имя<span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" asp-for="@item.Name" placeholder="Малыши" class="form-control" required />
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-skill">
                                            Минимальный возраст<span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input class="form-control" asp-for="@item.MinimumAge" min="1" required />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-skill">
                                            Максимальный возраст<span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input class="form-control" asp-for="@item.MaximumAge" min="1" max="102" required />
                                        </div>
                                    </div>
                                    

                                    <input type="submit" asp-action="Create" asp-controller="AgeType"  formmethod="post" class="btn login-form__btn submit w-100" value="@resText" />
                                 </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (isEdit && Model.Parents != null && Model.Parents?.Count() != 0)
{
    <section style="padding-top:0%">
        <div class="login-form-bg h-100">
            <div class="container h-100">
                <div class="row justify-content-center h-100">
                    <div class="col-xl-10">
                        <div class="form-input-content">
                            <div class="card login-form mb-0">
                                <div class="card-body pt-5">
                                    @foreach (var par in Model.Parents)
                                    {
                                        <div class="col" style="background-color:rgb(117 113 249 / 30%)">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div>
                                                        <!--HEADER LESSON-->
                                                        <div class="row">
                                                            <div>@par.DisplayName - @par.DateCreated</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
