@model IQueryable<PaymentCategory>?;
@{
	ViewData["Title"] = "Create";
}

@if (Model == null || Model.Count() == 0)
{
    <div style="display:flex;flex;grid-gap:20px;justify-content:center">
        <h2>List is empty</h2>
    </div>
    <div id="lessonType-data">
        <form><a class="btn btn-primary" type="submit" asp-action="Create" asp-controller="PaymentType">Create</a></form>
    </div>
}
else
{


    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lesson type</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        
                                        <th>Name</th>
                                        <th>Status</th>
                                        <th>Last update</th>
                                        <th>Student price</th>
                                        <th>Teacher price</th>
                                        <th>Duration in minutes</th>
                                        <th>Lessons per week</th>
                                        <th>Min count lessons to pay</th>
                                        <th>Actions</th>
                                        </tr>
                                    <tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Where(x => x.Parent == null))
                                    {
                                        @await Html.PartialAsync("Row", item)
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Displayed title</th>
                                        <th>Subject</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div>
                            <form><a class="btn btn-primary" type="submit" asp-action="Create" asp-controller="PaymentType">Create</a></form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

  
    }
