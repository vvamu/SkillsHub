@model List<Course>?;
@{
	ViewData["Title"] = "Create";
}

<style>
    th, td {
        text-wrap: nowrap
    }

</style>

@{
    var items = Model ?? new List<Course>();

}



<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div style="display:flex; justify-content:space-between;align-items:center;margin:5px">
                        <h2 class="card-title">Курсы</h2>
                        <form>
                            <div><input type="submit" class="btn btn-primary" value="+" asp-action="Create" asp-controller="Course" /></div>
                        </form>
                    </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Статус</th>
                                        <th>Имя</th>
                                        <th>Предмет</th>
                                        <th>Описание</th>
                                        <th>Дата изменения</th>
                                        <th>Дата создания</th>
                                    </tr>
                                </thead>
                                <tbody id="partialContainer">
                                   
                                   @foreach(var item in items)
                                {
                                    <tr>
                                       
                                           <td>@item?.Status</td>
                                           <td><form><a asp-action="Create" asp-controller="Course" asp-route-itemId="@item?.Id" style="color:#7571f9">@item?.Name</a></form></td>
                                           <td>@item?.SubjectRu</td>
                                           <td>@item?.Description</td>
                                           <td>@item?.DateCreated</td>
                                           <td>@item?.DateRegistration</td>
                                     
                                    </tr>
                                }
                                   
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Статус</th>
                                        <th>Имя</th>
                                        <th>Предмет</th>
                                        <th>Описание</th>
                                        <th>Дата изменения</th>
                                        <th>Дата создания</th>                                    
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>