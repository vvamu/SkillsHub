        <!--ITEMS-->
        @{
            if (Model == null || Model.Count() == 0)
            {
               
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">

                <div style=" display:flex;flex;grid-gap:20px;justify-content:center ">
                    <h3>Запросы отсутствуют</h3>
                </div>
                </div>
                </div>
                </div>
                    </div>
                </div>



            }

            else
            {

                var groups = Model.Select(x => x.LessonBefore).Select(x => x.Group);
                groups = groups.DistinctBy(x => x.Id);

                <div class="container-fluid">
                @foreach (var i in groups)
                {
                    var reqs = Model.Where(x => x.LessonBefore.Group.Id == i.Id);


                    <div>
                            <div class="col">
                                <div class="card" style="margin:20px">
                                    <div class="card-body">
                                        <div>
                                            <!--<img class="mr-3 circle-rounded" src="images/avatar/2.jpg" width="50" height="50" alt="Generic placeholder image">-->
                                            <div>
                                                <div class="d-sm-flex justify-content-between mb-2" style="display:flex">
                                                    <h3 class="mb-sm-0">

                                                        <a asp-action="Item" asp-controller="Group" asp-route-id="@i.Id" style="font-weight:900;color:#7571f9">Запросы группы "@i.Name"</a>

                                                </h3>
                                            </div>

                    @foreach (var item in reqs.OrderByDescending(x => x.DateCreated))
                   {

                        /*
            foreach (var item in Model.OrderBy(x=>x.LessonBefore.Group.Id).OrderByDescending(x => x.DateCreated))
                        {*/
                                                <div>
                                                    <div class="d-sm-flex justify-content-between mb-2" style="display:flex">
                                                        <h5 class="mb-sm-0">

                                                            <small class="text-muted ml-4">
                                                                <strong>Отправлено @item.DateCreated</strong> пользователем <strong><a asp-action="Item" asp-controller="Account" asp-route-itemId="@item.User.Id" style="font-weight:900;color:#7571f9">@item.User.Login </a></strong>
                                                            </small>
                                                        </h5>
                                                    </div>
                                                </div>
                        

                                                        


                                                <!--ApplyRequest(Guid id, Lesson lesson, int answer)-->

                                                <form>
                                                <div style="display:flex;justify-content:space-between" class="row">

                                                    <div class="card col-lg-6"> 
                                                        <div class="card-body">
                                                            <h3><a asp-action="Create" asp-controller="Lesson" asp-route-id="@item.LessonBefore.Id" style="font-weight:900;color:#7571f9">Занятие @item.LessonBefore.StartTime.ToShortDateString() </a></h3>
                                                            <div>
                                                                <h4>До изменений</h4>
                                                                <div style="display:flex; justify-content:space-between">
                                                                    <div style="display:flex; grid-gap:5%">
                                                                       <input type="datetime-local"
                                                                           step="any"
                                                                           class="form-control"
                                                                           asp-for="@item.LessonBefore.StartTime" disabled/>
                                                                           -
                                                                        <input type="datetime-local"
                                                                           step="any"
                                                                           class="form-control"
                                                                           asp-for="@item.LessonBefore.EndTime" disabled/>

                                                                           <!--
                                                                        <input type="time" name="startTime" class="form-control" asp-for="item.LessonBefore.StartTime" disabled /> -
                                                                        <input type="time" name="endTime" class="form-control" asp-for="item.LessonBefore.EndTime" disabled />-->
                                                                    </div>

                                                                </div>

                                                            </div>
                                                            @if (!item.RequestMessage.ToLower().Contains("delete"))
                                                            {
                                                                <div>
                                                                    <h4>После изменений</h4>
                                                                    <div style="display:flex; justify-content:space-between">
                                                                        <div style="display:flex; grid-gap:5%">
                                                                            <input type="datetime-local" step="any" class="form-control" asp-for="@item.NewStart"  /> -
                                                                            <input type="datetime-local" step="any" class="form-control" asp-for="@item.NewEnd"  />
                                                                        </div>

                                                                    </div>

                                                                </div>
                                                            }
                                                        </div>
                                                    </div>



                                                    <div class="card col-lg-3">
                                                        <div class="card-body">
                                                            <div>
                                                                <h4>Сообщение</h4>
                                                                <div style="display:flex; justify-content:space-between">

                                                                    <div>@item.RequestMessage</div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="card col-lg-3">

                                                        <!-- ADD GOGS (3) item.LessonBefore.StartTime
                                                        
                                                        -->

                                                        <div class="card-body">
                                                          
                                                                <h4>Действие</h4>
                                                                <div >
                                                                    
                                                                    <input type="hidden" asp-for="@item.Id"/>

                                                                        @if(item.RequestMessage.Contains("delete"))
                                                                        {

                                                                            <input type="submit" asp-action="ApplyDeleteRequest" asp-controller="Request" asp-route-id="@item.Id" value="Применить изменения" class="btn btn-primary" />
                                                                            <input type="submit" asp-action="RejectDeleteRequest" asp-controller="Request" asp-route-id="@item.Id" value="Отклонить изменения" class="btn btn-danger" />
                                                                        }
                                                                        else
                                                                        {
                                                                            <input type="submit" asp-action="ApplyRequest" asp-controller="Request" asp-route-id="@item.Id" value="Применить изменения" class="btn btn-primary" />
                                                                            <input type="submit" asp-action="RejectRequest" asp-controller="Request" asp-route-id="@item.Id" value="Отклонить изменения" class="btn btn-danger" />
                                                                        }
                                                                   
                                                                </div>
                                                            </div>
                                                        
                                                    </div>
                                                     
                                                    <!-- add DOGs asp-route-id="item.Id"
                                                    <div class="card" style="margin:20px">
                                                    <div class="card-body">
                                                    <div>
                                                    {

                                                    <form>
                                                    <input type="hidden" name="answer" value="1" />
                                                    <input type="submit" asp-action="ApplyRequest" asp-controller="Request" asp-route-id="item.Id" value="Применить изменения" class="btn btn-primary" />
                                                    </form>
                                                    <form>
                                                    <input type="hidden" name="answer" value="-1" />
                                                    <input type="submit" asp-action="ApplyRequest" asp-controller="Request" asp-route-id="item.Id" value="Отклонить изменения" class="btn btn-danger" />
                                                    </form>

                                                    }
                                                    </div>
                                                    </div>
                                                    </div>
                                                    -->


                                                </div>
                                           </form>
                                      



                    }
                    <!--
                    <form method="get"><a asp-action="Create" asp-controller="Cources"> CReate</a></form>
                                            -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                }
                </div>
            }
