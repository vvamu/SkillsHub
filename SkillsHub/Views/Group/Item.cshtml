@using SkillsHub.Application.DTO;

@model Group
@{Group Group = Model;}
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" action="#" method="post">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Name <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <p class="col-lg-4 col-form-label">@Group.Name</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        CourseName <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <p class="col-lg-4 col-form-label">@Group.CourceName.Name</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Teacher <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <p class="col-lg-4 col-form-label">@Group.Teacher.ApplicationUser.FirstName + @Group.Teacher.ApplicationUser.Surname+ @Group.Teacher.ApplicationUser.LastName</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Lesson type <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <p class="col-lg-4 col-form-label">@Group.LessonType.Name</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Term <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <p class="col-lg-4 col-form-label">@Group.Term</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Lessons count <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <p class="col-lg-4 col-form-label">@Group.Lessons.Count</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Schedule <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <p class="col-lg-4 col-form-label">@foreach(var ds in Group.DaySchedules) { <div>@ds.DayName: @ds.WorkingStartTime-@ds.WorkingEndTime</div> } </p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Students in group <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <p class="col-lg-4 col-form-label">@foreach(var st in Group.GroupStudents) 
                                            { <a asp-action="Item" asp-controller="Account" asp-route-itemId="@st.Id" style="font-weight:900;color:#7571f9">@st.ApplicationUser.FirstName @st.ApplicationUser.Surname</a>}</p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>