                            {
                                <select asp-for="IsPermanentStaffGroup" >
                                    <option value="@true" selected>Yes</option>
                                    <option value="@false">false</option>
                                </select>
                            }
                            else
                            {
                                <select asp-for="IsPermanentStaffGroup">
                                    <option value="@true">Yes</option>
                                    <option value="@false" selected>false</option>
                                    </select>
                            }
