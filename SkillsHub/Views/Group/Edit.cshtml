                            <label class=" col-form-label" for="val-skill">
                                <h4>Cource name <span class="text-danger">*</span></h4>
                            </label>

                                <select asp-for="CourseNameId" class="form-select" id="courcesNames"  disabled="disabled">
                                
                            </select>
                        </div>



