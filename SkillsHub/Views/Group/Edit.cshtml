<form class="mt-1 mb-5 login-input" method="post">


    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        @if (Model != null)
                        {
                            <h2>Edit group</h2>
