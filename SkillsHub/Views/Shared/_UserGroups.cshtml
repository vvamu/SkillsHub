                    </div>
                </div>
            </nav>
            -->
            @{
                if (studentGroups != null)
                {
                    foreach (var item in studentGroups)
                    {
                        <div class="card">
                            <div class="card-body">
                            <a asp-action="Item" asp-controller="Group" asp-route-id="@item.Id">Group @item.Name</a>
